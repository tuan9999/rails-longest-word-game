<div class="lolz">
  <ul class="letters">
    <% @array.each do |letter| %>
      <li class="letter"><%= letter %></li>
    <% end %>
  </ul>

  <form class="letters_form" action="/score" method="POST">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type="text" name="word">
    <input type="submit">
  </form>
</div>

